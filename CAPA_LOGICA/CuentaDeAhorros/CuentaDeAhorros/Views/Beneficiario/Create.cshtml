@model model.entity.Beneficiario

@{
    ViewBag.Title = "Create";
}



<h1>Vista de registro de beneficiarios</h1>
@using (Html.BeginForm())
{
    <div class="form-horizontal">

        <div class="form-group">
            @Html.LabelFor(model => model.IdTipoParentezco, htmlAttributes: new { @class = "control-kabel col-md-2" })
            <div class="col-md-6">
                @Html.DropDownList("Departments", new List<SelectListItem>
                {
                  new SelectListItem { Text = "IT", Value = "1", Selected=true},
                  new SelectListItem { Text = "HR", Value = "2"},
                  new SelectListItem { Text = "Payroll", Value = "3"}
                }, "Select Department")
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IdCuenta, htmlAttributes: new { @class = "control-kabel col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.IdCuenta, new { htmlAttrbutes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.IdPersona, htmlAttributes: new { @class = "control-kabel col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.IdPersona, new { htmlAttrbutes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Porcentaje, htmlAttributes: new { @class = "control-kabel col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.Porcentaje, new { htmlAttrbutes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-actions col-md-offset-2">
            <input class="btn btn-primary" type="submit" name="btnGuardar" value="Guardar" />
            @*<a class="btn btn-primary" href="~/Beneficiario/Inicio/@Model.IdCuenta">Regresar</a>*@
        </div>

    </div>

}