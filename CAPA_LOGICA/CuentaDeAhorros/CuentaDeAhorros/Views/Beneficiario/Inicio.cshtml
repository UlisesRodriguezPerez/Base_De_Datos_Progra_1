@model List<model.entity.Beneficiario>
@{
    ViewBag.Title = "Inicio";
}

 

@Html.Partial("~/Views/Shared/NavBar.cshtml")

<div class="container-fluid">
    <h3>Beneficiarios de la cuenta </h3>
    <form action="~/Beneficiario/Regresar" method="post">
        <div>
            <a class="btn btn-primary" href="~/Beneficiario/create">Agregar nuevo beneficiario</a>
        </div>
        <table class="table">
            <tr class="btn-primary">
                @*<th>Indice</th>*@
                <th>Nombre del Beneficiario</th>
                <th>Tipo Parentezco</th>
                <th>Cuenta</th>
                <th>Porcentaje</th>
                <th colspan="3"></th>
            </tr>

            @foreach (var objetoBeneficiario in Model)
            {

        <tr>
            <!--<td>-->@*@objetoBeneficiario.IdBeneficiario*@<!--</td>-->
            @*<td>@objetoBeneficiario.IdCuenta</td>*@
            <td>@objetoBeneficiario.Nombre</td>
            <td>@objetoBeneficiario.Parentezco</td>
            <td>@objetoBeneficiario.NumeroCuenta</td>
            <td>@objetoBeneficiario.Porcentaje</td>
            @*<td>@objetoBeneficiario.Activo</td>*@

            <!--  PENDEINTE EL VER  -->
            <td><a class="btn btn-success" href="~/Beneficiario/find/@objetoBeneficiario.IdBeneficiario">Ver</a></td>
            <td><a class="btn btn-primary" href="~/Beneficiario/update/@objetoBeneficiario.IdBeneficiario">Actualizar</a></td>
            <td><a class="btn btn-danger" href="~/Beneficiario/delete/@objetoBeneficiario.IdBeneficiario">Eliminar</a></td>
            @*<td><a class="btn btn-success" href="~/Menu/MenuNormal/@objetoBeneficiario.">Regresar</a></td>*@

        </tr>
            }


        </table>

    </form>
    <div>Ha usado el @Model.Sum(i => i.Porcentaje) % de 100 </div>


    <div class="card border-warning mb-3" style="max-width: 18rem;">
        <div class="card-header">Advertencia</div>
        <div class="card-body text-warning">
            <h5 class="card-title">Observación</h5>
            <p id="advertencia" class="card-text" align="justify">Si sus cambios no se ven reflejados, es porqque ya hay 3 beneficiarios, porque excede el 100% del porcentaje o porque la persona no existe</p>
        </div>
    </div>

