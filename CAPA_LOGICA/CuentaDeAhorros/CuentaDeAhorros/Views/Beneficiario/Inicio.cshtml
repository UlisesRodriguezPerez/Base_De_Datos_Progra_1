@model List<model.entity.Beneficiario>
@{
    ViewBag.Title = "Inicio";
}




<h3>Beneficiarios: </h3>
<div class="container-fluid">
    <form action="~/Beneficiario/VerifyPorcentaje" method="post">
        <div>
            <a class="btn btn-primary" href="~/Beneficiario/create">Nuevo</a>
        </div>
        <table class="table">
            <tr class="btn-primary">
                <th>Id Beneficiario</th>
                <th>Id Persona</th>
                <th>Id Tipo Parentezco</th>
                <th>Id Cuenta</th>
                <th>Porcentaje</th>
                <th>Activo</th>
                <th colspan="3"> Operaciones</th>
            </tr>

            @foreach (var objetoBeneficiario in Model)
            {

                <tr>
                    <td>@objetoBeneficiario.IdBeneficiario</td>
                    <td>@objetoBeneficiario.IdPersona</td>
                    <td>@objetoBeneficiario.IdTipoParentezco</td>
                    <td>@objetoBeneficiario.IdCuenta</td>
                    <td>@objetoBeneficiario.Porcentaje</td>
                    <td>@objetoBeneficiario.Activo</td>

                    <!--  PENDEINTE EL VER  -->
                    <td><a class="btn btn-success" href="~/Beneficiario/find/@objetoBeneficiario.IdBeneficiario">Ver</a></td>
                    <td><a class="btn btn-primary" href="~/Beneficiario/update/@objetoBeneficiario.IdBeneficiario">Actualizar</a></td>
                    <td><a class="btn btn-danger" href="~/Beneficiario/delete/@objetoBeneficiario.IdBeneficiario">Eliminar</a></td>

                </tr>
            }


        </table>

        <div>@Model.Sum(i => i.Porcentaje)</div>
        <input type="button" value="Verificar" onclick="guardar();">
        <script>

            function guardar() {
                var cantidad = @Model.Count();
                var indice = (@Model.Sum(j => j.IdCuenta)) / cantidad;
                var x = @Model.Sum(i => i.Porcentaje);
                if (x == "100" && cantidad < 4) {
                    toastr.success("Beneficiarios verificados con éxito", "Guardado con éxito");

                    document.write("<a class='btn btn - primary' href='/Menu/MenuNormal/@(Model.Sum(j =>j.IdCuenta)/@Model.Count())'>Volver al menu de cuentas.</a>");
                }
                else {
                    toastr.warning("No cumple con el 100% en la distribución de porcentajese o hay más de 3 beneficiarios.", "Advertencia");
                }
        }

        </script>
       
    </form>
</div>


