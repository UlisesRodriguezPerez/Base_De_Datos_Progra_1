
@model List<model.entity.EstadoCuenta>

@{
    ViewBag.Title = "Inicio";
}
<style>
    tr[data-href] {
        cursor: pointer;
    }
</style>
 
@Html.Partial("~/Views/Shared/NavBar.cshtml")
<h3>Estados de cuenta</h3>
<div class="container-fluid">
    <table class="table">
        <tr class="btn-primary">
            <th>Id Estado Cuenta</th>
            <th>Número de cuenta</th>
            <th>Fecha Inicio</th>
            <th>Fecha Final</th>
            <th>SaldoInicial</th>
            <th>SaldoFinal</th>
            <th>Saldo Mínimo</th>
            <th>Retiros Cajero H</th>
            <th>Retiros Cajero A</th>
        </tr>
        @foreach (var objetoEstadoCuenta in Model)
        {


    <tr data-href='https://www.htmlquick.com/es/tutorials/tables.html'>

        <td>@objetoEstadoCuenta.IdEstado</td>
        @*<td>@objetoEstadoCuenta.IdCuentaAhorro</td>*@
        <td>@objetoEstadoCuenta.NumeroCuenta</td>
        <td>@objetoEstadoCuenta.FechaInicio</td>
        <td>@objetoEstadoCuenta.FechaFinal</td>
        <td>@objetoEstadoCuenta.SaldoInicial</td>
        <td>@objetoEstadoCuenta.SaldoFinal</td>
        <td>@objetoEstadoCuenta.SaldoMinimo</td>
        <td>@objetoEstadoCuenta.RetirosCajeroHumano</td>
        <td>@objetoEstadoCuenta.RetirosCajeroAutomatico</td>

        <td><a class="btn btn-success" href="~/Movimiento/Inicio/@objetoEstadoCuenta.IdEstado">Ver Movimientos</a></td>
        @*<td>
            <form action="~/Menu/Regresar" method="post">
                <div>
                    <input name="idUsuario" id="idUsuario" value=@objetoEstadoCuenta. required disabled=»disabled» />

                </div>

                <div>
                    <button>Regresar</button>
                </div>
            </form>
        </td>*@
        @*<td><a class="btn btn-outline-primary" href="~/Menu/MenuNormal/@objetoEstadoCuenta.IdCuentaAhorro">Regresar</a></td>*@
    </tr>

        }
    </table>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const rows = document.querySelectorAll("tr[data-href]");
            console.log(rows);

            rows.forEach(row => {
                row.addEventListener('click', () => {
                    window.location.href = row.dataset.href;
                });

            });

        });
    </script>

    @*<a class='btn btn - primary' href='/Menu/MenuNormal/@(Model.Sum(j =>j.IdCuentaAhorro)/@Model.Count())'>Regresar</a>*@
</div>
